<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bharavi.naukriemployer.NewUser">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME NEW USER!"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:hint="Enter New Username"
        android:textSize="25sp"
        android:id="@id/newUserEditText"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/newUserEditText"
        android:layout_marginTop="20dp"
        android:hint="Enter New Password"
        android:textSize="25sp"
        android:inputType="textPassword"
        android:id="@id/newPasswordEditText"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/newPasswordEditText"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:id="@id/newUserSubmitButton"/>

</RelativeLayout>
